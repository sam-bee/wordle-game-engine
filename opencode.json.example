{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "llama.cpp": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "llama.cpp (local)",
      "options": {
        "baseURL": "http://127.0.0.1:8088/v1"
      },
      "models": {
        "gpt-oss-20b-F16.gguf": {
          "name": "GPT OSS 20B F16",
          "limit": { "context": 32768, "output": 8192 }
        }
      }
    },
    "xai": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "xAI (Grok)",
      "options": {
        "baseURL": "https://api.x.ai/v1",
        "apiKey": "[API KEY]"
      },
      "models": {
        "grok-4-1-fast-reasoning": {
          "name": "Grok 4.1 Fast",
          "limit": { "context": 131072, "output": 8192 }
        },
        "grok-4": {
          "name": "Grok 4",
          "limit": { "context": 131072, "output": 8192 }
        }
      }
    },
    "moonshot": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Moonshot (Kimi)",
      "options": {
        "baseURL": "https://api.moonshot.ai/v1",
        "apiKey": "[API KEY]"
      },
      "models": {
        "kimi-k2.5": {
          "name": "Kimi 2.5",
          "limit": {
            "context": 262144,
            "output": 262144
          }
        }
      }
    }
  },
  "mcp": {
    "brave-search": {
      "type": "local",
      "command": ["npx", "-y", "@brave/brave-search-mcp-server"],
      "enabled": true,
      "environment": {
        "BRAVE_API_KEY": "[API KEY]"
      }
    }
  },
  "permission": {
    "brave-search_*": "allow"
  },
}
